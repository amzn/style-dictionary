<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_button_primary_active" />
            <padding android:top="@dimen/size_padding_base"
                android:right="@dimen/size_padding_base"
                android:bottom="@dimen/size_padding_base"
                android:left="@dimen/size_padding_base" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <solid android:color="@color/color_background_button_primary_active" />
            <padding android:top="@dimen/size_padding_base"
                android:right="@dimen/size_padding_base"
                android:bottom="@dimen/size_padding_base"
                android:left="@dimen/size_padding_base" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_button_primary_base" />
            <padding android:top="@dimen/size_padding_base"
                android:right="@dimen/size_padding_base"
                android:bottom="@dimen/size_padding_base"
                android:left="@dimen/size_padding_base" />
        </shape>
    </item>
</selector>
