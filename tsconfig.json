{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "types/**/*.d.ts",
    "lib/common/**/*.js",
    "lib/fs.js",
    "lib/fs-node.js",
    "lib/StyleDictionary.js"
  ],
  "exclude": ["node_modules", "**/coverage/*"]
}
