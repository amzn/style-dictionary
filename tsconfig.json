{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["types/**/*.d.ts", "lib/**/*.js", "**/*.ts"],
  "exclude": ["node_modules", "**/coverage/*"]
}
