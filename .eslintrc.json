{
  "ignorePatterns": ["/docs/dist/**/*"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true,
    "browser": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["mocha"],
  "rules": {
    "no-unused-vars": 1,
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "mocha/no-skipped-tests": "warn",
    "mocha/no-exclusive-tests": "error",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["examples/**/*.js"],
      "rules": {
        "no-console": 0
      }
    }
  ]
}
