{
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "Buffer": true,
    "escape": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "no-console": 0,
    "no-unused-vars": 1
  },
  "overrides": [
    {
      "files": ["__tests__/**//*.js"],
      "globals": {
        "expect": true
      }
    }
  ]
}
