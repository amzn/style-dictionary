{
  "source": ["properties/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
        "destination": "assets.scss",
        "format": "scss/variables"
      }]
    },
    "json/flat": {
      "transformGroup": "web",
      "buildPath": "build/json/",
      "files": [{
        "destination": "assets.json",
        "format": "json/asset"
      }]
    },
    "assets/copy": {
      "transformGroup": "assets",
      "buildPath": "build/",
      "actions": ["copy_assets"]
    }
  }
}
